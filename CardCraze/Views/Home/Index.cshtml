@model CardCraze.Models.FeaturedCards

@{
    ViewData["Title"] = "CardCraze - Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Welcome to CardCraze</h1>
            <p>Discover the rarest and coolest Pokémon cards!</p>
            <h3>Make an account today, and start browsing our collection!</h3>
        </div>
    </section>

    <!-- Featured Cards Section -->
    <section class="featured-cards">
        <h2>Featured Cards</h2>
        <div class="card-grid">
            @foreach (var card in Model.Cards)
            {
                <div class="card">
                    <img class="card-img" src="@Url.Content(card.ImageURL)" alt="@card.Name">
                    <div class="card-info">
                        <h3>@card.Name</h3>
                        <p>Rarity: @card.Rarity</p>
                        <p>Price: $@card.Price</p>
                    </div>
                </div>
            }
        </div>
    </section>
</body>
</html>
